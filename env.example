# EgyptGroupExcursions Environment Variables
# Copy this to .env and fill in values

# Django
ENVIRONMENT=local
SECRET_KEY=your-secret-key-here

# Database (for docker-compose, these are overridden)
DBNAME=egypttours
DBUSER=postgres
DBPASS=postgres
DBHOST=localhost

# OpenAI
OPENAI_API_KEY=sk-...

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000/api/v1
# For local dev: http://127.0.0.1:8000 (no trailing slash, no /media/)
# For production with DO Spaces: leave empty (Django returns full URLs)
NEXT_PUBLIC_MEDIA_URL=http://127.0.0.1:8000
NEXT_PUBLIC_OPENWEATHER_API_KEY=

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# DigitalOcean Spaces (production only)
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SPACES_BUCKET_NAME=prep-english
SPACES_REGION=tor1
