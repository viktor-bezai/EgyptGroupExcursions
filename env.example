# EgyptGroupExcursions Environment Variables
# Copy this to .env and fill in values

# ===================
# Django Backend
# ===================
ENVIRONMENT=local  # local or production
SECRET_KEY=your-secret-key-here

# ===================
# Database (PostgreSQL)
# ===================
DBNAME=egypttours
DBUSER=postgres
DBPASS=postgres
DBHOST=localhost
DBPORT=5432  # Use 25060 for DigitalOcean managed DB

# ===================
# OpenAI (for AI features)
# ===================
OPENAI_API_KEY=sk-...

# ===================
# Telegram Bot (for contact form notifications)
# ===================
# 1. Create bot: Message @BotFather on Telegram, send /newbot
# 2. Get chat ID: After creating bot, message it, then visit:
#    https://api.telegram.org/bot<TOKEN>/getUpdates
#    Look for "chat":{"id":YOUR_CHAT_ID}
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# ===================
# Frontend (Next.js)
# ===================
# API base URL (no trailing slash)
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000/api/v1

# Media URL for images
# - Local dev: http://127.0.0.1:8000 (no /media/, Django returns full paths)
# - Production with DO Spaces: leave empty (Django returns full URLs)
NEXT_PUBLIC_MEDIA_URL=http://127.0.0.1:8000

# OpenWeather API for weather widget
NEXT_PUBLIC_OPENWEATHER_API_KEY=

# ===================
# Celery / Redis (for background tasks)
# ===================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================
# DigitalOcean Spaces (production media storage)
# ===================
# Get credentials from DO Dashboard > API > Spaces Keys
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SPACES_BUCKET_NAME=prep-english
SPACES_REGION=tor1
